{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt && rm -rf /tmp/matplotlib-*" 
      }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/(script\\.js|favicon\\.ico)", "dest": "/$1" },
    { "src": "/planarity", "dest": "api/index.py" }
  ]
}
